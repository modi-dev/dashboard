# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DDL_AUTO=update
DB_SHOW_SQL=false
DB_FORMAT_SQL=true

# Logging Configuration
LOG_LEVEL_DASHBOARD=INFO
LOG_LEVEL_MONITOR=DEBUG
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_BINDER=TRACE

# Management Configuration
MANAGEMENT_ENDPOINTS=health,info,metrics
HEALTH_SHOW_DETAILS=always

# Monitoring Configuration (values in MINUTES)
MONITORING_INTERVAL=5      # Interval in minutes (default: 5 minutes)
MONITORING_TIMEOUT=0.17    # Timeout in minutes (default: 0.17 minutes = ~10 seconds)
